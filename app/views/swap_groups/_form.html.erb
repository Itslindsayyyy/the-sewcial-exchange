<%= form_with(model: swap_group, class: "contents") do |form| %>
  <% if swap_group.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(swap_group.errors.count, "error") %> prohibited this swap_group from being saved:</h2>

      <ul class="list-disc ml-6">
        <% swap_group.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": swap_group.errors[:name].none?, "border-red-400 focus:outline-red-600": swap_group.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :description %>
    <%= form.textarea :description, rows: 4, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": swap_group.errors[:description].none?, "border-red-400 focus:outline-red-600": swap_group.errors[:description].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :created_by_id %>
    <%= form.text_field :created_by_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": swap_group.errors[:created_by_id].none?, "border-red-400 focus:outline-red-600": swap_group.errors[:created_by_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
