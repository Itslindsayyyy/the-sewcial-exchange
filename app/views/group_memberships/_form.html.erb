<%= form_with(model: group_membership, class: "contents") do |form| %>
  <% if group_membership.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(group_membership.errors.count, "error") %> prohibited this group_membership from being saved:</h2>

      <ul class="list-disc ml-6">
        <% group_membership.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :swap_group_id %>
    <%= form.text_field :swap_group_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": group_membership.errors[:swap_group_id].none?, "border-red-400 focus:outline-red-600": group_membership.errors[:swap_group_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": group_membership.errors[:user_id].none?, "border-red-400 focus:outline-red-600": group_membership.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :group_role %>
    <%= form.text_field :group_role, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": group_membership.errors[:group_role].none?, "border-red-400 focus:outline-red-600": group_membership.errors[:group_role].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
