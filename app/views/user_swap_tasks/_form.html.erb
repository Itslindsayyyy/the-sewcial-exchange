<%= form_with(model: user_swap_task, class: "contents") do |form| %>
  <% if user_swap_task.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(user_swap_task.errors.count, "error") %> prohibited this user_swap_task from being saved:</h2>

      <ul class="list-disc ml-6">
        <% user_swap_task.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user_swap_task.errors[:user_id].none?, "border-red-400 focus:outline-red-600": user_swap_task.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :swap_task_id %>
    <%= form.text_field :swap_task_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": user_swap_task.errors[:swap_task_id].none?, "border-red-400 focus:outline-red-600": user_swap_task.errors[:swap_task_id].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :completed %>
    <%= form.checkbox :completed, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": user_swap_task.errors[:completed].none?, "border-red-400 focus:outline-red-600": user_swap_task.errors[:completed].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
